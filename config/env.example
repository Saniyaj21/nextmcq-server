# Environment Configuration for NextMCQ Server

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nextmcq

# Server Configuration
NODE_ENV=development
PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for OTP)
SMPT_HOST=smtp.gmail.com
SMPT_PORT=587
SMPT_SERVICE=gmail
SMPT_MAIL=your-gmail-address@gmail.com
SMPT_PASSWORD=your-app-password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Monthly Rewards API Key (for cron job authentication)
MONTHLY_REWARDS_API_KEY=your-monthly-rewards-api-key-change-this-in-production